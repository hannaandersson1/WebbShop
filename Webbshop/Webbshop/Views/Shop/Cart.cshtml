@model IEnumerable<Webbshop.Models.Order_Details>
@using Webbshop.Models;
@{
    var user = Session["ViewUser"] as ViewUser;
}

@if (user == null)
{
    { Response.Redirect("~/Shop/Index"); }
}
@{
    ViewBag.Title = "Index";
}

<h2>Kundvagn</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color.Color1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.Order_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size.Size1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color.Color1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.Order_Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size.Size1)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", "Order_Details", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
